<Container>:
    display: display
    lengths: lengths
    rows: 1
    BoxLayout:
        orientation: "vertical"
        padding: [50, 50, 50, 50]
        Play:
            on_release: root.play()
            disabled: True
        Start:
            on_release: root.start()
    Label:
        id: display
        font_size: dp(20)
        text: '0'
        text_size: self.size
        valign: 'middle'
    Label:
        id: lengths
        top: root.top - 10
        font_size: dp(20)
        text_size: self.size
    