<Container>:
    display: display
    lengths: lengths
    rows: 1
    BoxLayout:
        orientation: "vertical"
        padding: [50, 50, 50, 50]
        Play:
            on_release: root.play()
            disabled: True
        Prompt:
            on_release: root.promptMe()
            disabled: True    
        Start:
            on_release: root.start()
    Cues:
        on_press: root.on_checkbox_active(self.active)
        size: [16, 16]
        background_checkbox_normal: 'unchecked.png'
        background_checkbox_down: 'checked.png'
        pos_hint: {'top': 0.95}
    Label:
        id: display
        font_size: dp(20)
        text: '0'
        text_size: self.size
        valign: 'middle'
    Label:
        id: lengths
        top: root.top - 10
        font_size: dp(20)
        text_size: self.size
    