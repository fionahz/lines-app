#:kivy 1.10.1

#:import Window kivy.core.window.Window
<MenuScreen>:
    BoxLayout:
        id: menu_container
        orientation: "vertical" 

        scrollBox: scrollBox

        BoxLayout:
            size_hint: (None, None)
            size: (Window.width, 0.2*Window.height)
            orientation: 'vertical'
            spacing: 10
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, None)
                Button:
                    text: 'I'
                Button:
                    disabled: True
                    text: 'L I N E !'
                Button:
                    text: 'Settings'
            Label:
                text: 'Click the play you want to rehearse!'

        ScrollView:
            id: scrollBox
            GridLayout:
                id: playMenu
                cols: 1
                size_hint: (None, None)
                width: Window.width

<RehearseScreen>:
    BoxLayout:
        id: rehearse_container
        orientation: "vertical"

        BoxLayout:
            size_hint: (None, None)
            size: (Window.width, 0.2*Window.height)
            orientation: 'vertical'
            spacing: 10
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, None)
                Button:
                    text: 'Script Menu'
                    on_press: root.manager.current = "menu"
                Button:
                    disabled: True
                    text: 'L I N E !'
                Button:
                    text: 'Settings'
            Label:
                text: 'Select Act, Scene and Line Num Here!'

        FloatLayout:
            size_hint: (None, None)
            size: (0.9*Window.width, 0.8*Window.height)
            Button:
                text: 'Next Line!'
                size_hint: (None, None)
                size: (root.width, 0.8*root.height)
                pos_hint: {'top': 1}
            Button:
                text: 'Prompt Me!' 
                size_hint: (None, None)
                size: (root.width, 0.1*root.height)


        
